{
    "compilerOptions": {
      "baseUrl": "src",
      "inlineSourceMap": true,
      "inlineSources": true,
      "module": "ESNext",
      "target": "ES2018",
      "allowJs": false,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "importHelpers": true,
      "isolatedModules": true,
      "strictNullChecks": true,
      "lib": [
        "DOM",
        "ES2018"
      ]
    },
    "include": [
      "src/**/*.ts"
    ]
  }